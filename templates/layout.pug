block variables
  - let title = ""
  - let description = ""
  - let isOnline = false

doctype html
html(lang="ja")
  head
    title #{title}
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    if isOnline
      base(href="https://fuze666.github.io/")
    else 
      base(href="http://127.0.0.1:5500/docs/")
    block stylesheet
      link(rel="stylesheet"  type="text/css" href="css/main.css")
    block javascript 
  body
    header
      #site_banner
        #site_icn_image
        #site_name Fuze666のホームページ
      #title_wrapper
        #title_color
        #title 
          h1 #{title}
        nav#categoris
          ul
          li: a(href="index.html") ホーム
          li: a(href="games/index.html") ゲーム
      #description #{description}
    #main
      block main 
    #footer 
      ul: li something